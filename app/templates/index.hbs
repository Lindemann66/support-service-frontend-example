<div class="container">
  <form class="form-signin" {{action "signIn" on="submit"}}>
    <h2 class="form-signin-heading">Please sign in</h2>
    <label for="email" class="sr-only">Email address</label>
    {{input value=email type="email" placeholder="Email address" class="form-control" id="email" required="true" autofocus="true"}}
    <label for="password" class="sr-only">Password</label>
    {{input value=password type="password" placeholder="Password" class="form-control" id="password" required="true"}}
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
  </form>
</div>

{{outlet}}